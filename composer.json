{
  "name": "tinker/payments-php-sdk",
  "version": "0.0.1",
  "description": "Official PHP SDK for Tinker Payments API",
  "type": "library",
  "require": {
    "php": "^8.1",
    "psr/http-client": "^1.0",
    "psr/http-message": "^1.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.57",
    "phpunit/phpunit": "^10.0",
    "guzzlehttp/guzzle": "^7.0",
    "phpmd/phpmd": "^2.14",
    "rector/rector": "^2.1",
    "phpstan/phpstan": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Tinker\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tinker\\Tests\\": "tests/",
      "Tools\\": "tools/"
    }
  },
  "scripts": {
    "lint": [
      "@lint:rector",
      "@lint:cs",
      "@lint:stan"
    ],
    "fix": [
      "@lint:cs-fix",
      "@lint:rector-fix"
    ],
    "lint:cs": "@php vendor/bin/php-cs-fixer fix --config=./.php-cs-fixer.dist.php --diff --verbose --using-cache=no --dry-run --allow-risky=yes",
    "lint:cs-fix": "@php vendor/bin/php-cs-fixer fix --config=./.php-cs-fixer.dist.php -v --using-cache=no --allow-risky=yes",
    "lint:stan": "@php vendor/bin/phpstan analyse --level=7 src/ ",
    "lint:md": "@php vendor/bin/phpmd",
    "lint:rector": "XDEBUG_MOD=off vendor/bin/rector process -c tools/Rector/rector.php --dry-run",
    "lint:rector-fix": "XDEBUG_MOD=off vendor/bin/rector process -c tools/Rector/rector.php",
    "test:application": "@php vendor/bin/phpunit --testsuite=Application",
    "test:integration": "@php vendor/bin/phpunit --testsuite=Integration",
    "test:unit": "@php vendor/bin/phpunit --testsuite=Unit",
    "test": [
      "@test:application",
      "@test:integration",
      "@test:unit"
    ]
  },
  "license": "MIT"
}